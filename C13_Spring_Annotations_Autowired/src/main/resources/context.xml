    <bean id="pointB" class="Point">
        <property name="x" value="-20"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="pointC" class="Point">
        <property name="x" value="20"/>
        <property name="y" value="0"/>
    </bean>

    <bean id="circle" class="Circle">
        <!-- with @Autowired annotation Spring auto finds available bean with values but only if there is
        one such bean available -->
    </bean>

    <bean id="centre" class="Point">  <!-- but if we id the bean we want to be injected after the field
                                        from the class (here centre from Circle class) Spring again finds
                                         the correct bean -->
        <property name="x" value="150"/>
        <property name="y" value="150"/>
    </bean>

    <!--<bean class="org.springframework.beans.factory.annotation.RequiredAnnotationBeanPostProcessor"/>-->
    <bean class="org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor"/>
</beans>